<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAEA"
    tools:context=".LoginAndSignup.LogoScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="153dp"
        android:layout_height="168dp"
        android:src="@drawable/logo"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piggy Bank Paradise"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:shadowColor="@color/white"
        android:layout_marginTop="380dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">

    </TextView>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sow Your Seeds"
        android:textSize="25dp"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#9DCC94"/>



    <TextView
        android:id="@+id/slogan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Your Wallet Flourish"
        android:textSize="25dp"
        android:layout_marginTop="455dp"
        android:layout_centerHorizontal="true"
        android:textColor="#9DCC94"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progressBarHorizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBarCircular"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/progressBarHorizontal"
        android:layout_alignParentEnd="true"
        android:indeterminate="true"
        android:layout_marginEnd="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_above="@id/progressBarHorizontal"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#9DCC94"
        android:textSize="20sp"
        android:layout_above="@id/progressBarHorizontal"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>