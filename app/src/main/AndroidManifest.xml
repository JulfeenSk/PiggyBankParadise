<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.PLAY_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="Piggy Bank Paradise"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniProject"
        tools:targetApi="31" >
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.MiniProject.NoActionBar" />
        <activity
            android:name=".HelperActivities.helperFragamentsActivities.UpdateNotes"
            android:exported="false" />
        <activity
            android:name=".HelperActivities.helperFragamentsActivities.AddNotes"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false" />
        <activity
            android:name=".LoginAndSignup.StartingScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginAndSignup.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".LoginAndSignup.RegistrationScreen"
            android:exported="false" />
        <activity
            android:name=".LoginAndSignup.LogoScreen"
            android:exported="true" />
        <activity
            android:name=".LoginAndSignup.PreLogin"
            android:exported="true" />
        <activity
            android:name=".LoginAndSignup.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".MainScreen"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>